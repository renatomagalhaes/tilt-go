# Development stage
FROM golang:1.23

WORKDIR /app

# Install necessary build tools
RUN apt-get update && apt-get install -y \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy go mod files and source code
COPY go.mod go.sum ./
COPY . .

# Download dependencies and build the application
RUN go mod download && go mod tidy && go build -o /app/worker-server .

# Expose port
EXPOSE 8081

# The entrypoint will be set by Tilt
# CMD ["go", "run", "main.go"] 